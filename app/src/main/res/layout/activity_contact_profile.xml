        app:layout_constraintBottom_toTopOf="@+id/buttonUnfollow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFriendsRadius"
